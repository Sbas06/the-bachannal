---
import { getRelativeLocaleUrl } from "astro:i18n";

const currentLang = Astro.currentLocale || 'es';
import Gradient from '@/components/Gradient/Gradient.astro';
import NavMenu from '@/components/NavBar/NavMenu.astro';
import { Image } from 'astro:assets';
import BacchanalLogo from '@/assets/images/bacchanal-icon-image.webp';
import LanguageSwitcher from '../LanguageSwitcher/languageSwitcher.astro';
---

<Gradient
  as='header'
  containerClass='grid w-full grid-cols-3 items-center justify-items-center gap-x-10 p-[11px] before:bottom-px'
  isAnimated
  hasGradient
>
  <NavMenu />
  <a href={getRelativeLocaleUrl(currentLang, '/')}>
    <Image
      src={BacchanalLogo}
      width={90}
      height={70}
      alt='Logo for El Bacchanal, a bar in GuatapÃ©, Colombia, featuring a red, yellow, and green gradient background, a firecracker icon, a cocktail glass, and the Instagram handle @el_bacchanal.'
      loading='eager'
    />
  </a>
  <LanguageSwitcher client:load />
</Gradient>
