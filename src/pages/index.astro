---
import Layout from '@/layouts/Layout.astro';
import SliderImage from '@/components/Slider/slider-image.astro';
import Footer from '@/components/Footer/Footer.astro';
import NavBar from '@/components/NavBar/NavBar.astro';
import ColorfulParadise from '@/components/ColorfulParadise/ColorfulParadise.astro';
import SliderBanner from '@/components/SliderBanner/SliderBanner.astro';
import TextImage from '@/components/TextImage/TextImage.astro';

import {
  topSliderContent,
  singleBanner,
  bottomSliderContent,
  textImageBacchanalMean,
  textImageBacchanalStory,
} from '@/lib/media';

import {
  sliderContent,
  sliderInstagramContent
} from '@/lib/slider-instagram-media';
---

<Layout>
  <NavBar />
  <SliderImage content={sliderContent} />
  <SliderImage content={sliderInstagramContent} />
  <SliderImage variant="instagram" spaceBetween={6} showHeader speed={3200} />
  <SliderBanner
    isSlider
    content={topSliderContent}
    contentPosition='right'
    imageLoading='eager'
    paginationPosition='pagLeft'
  />
  <TextImage direction='flex-row' content={textImageBacchanalMean} />
  <TextImage direction='flex-row-reverse' content={textImageBacchanalStory} />
  <SliderBanner
    content={singleBanner}
    contentPosition='left'
    imageLoading='lazy'
  />
  <SliderBanner
    isSlider
    content={bottomSliderContent}
    contentPosition='center'
    isWhitehella
    imageLoading='lazy'
    paginationPosition='pagRight'
  />
  <ColorfulParadise />
  <Footer />
</Layout>
