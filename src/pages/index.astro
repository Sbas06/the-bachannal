---
import Layout from '@/layouts/Layout.astro';
import Slider from '../components/Slider/slider.astro';
import Footer from '@/components/Footer/Footer.astro';
import NavBar from '@/components/NavBar/NavBar.astro';
import ColorfulParadise from '@/components/ColorfulParadise/ColorfulParadise.astro';
import SliderBanner from '@/components/SliderBanner/SliderBanner.astro';
import {
  topSliderContent,
  singleBanner,
  bottomSliderContent,
} from '@/lib/media';
---

<Layout>
  <NavBar />
    <Slider />
    <Slider variant="instagram" showHeader={true} />
  <SliderBanner
    isSlider
    content={topSliderContent}
    contentPosition='right'
    imageLoading='eager'
    paginationPosition='pagLeft'
  />
  <SliderBanner
    content={singleBanner}
    contentPosition='left'
    imageLoading='lazy'
  />
  <SliderBanner
    isSlider
    content={bottomSliderContent}
    contentPosition='center'
    isWhitehella
    imageLoading='lazy'
    paginationPosition='pagRight'
  />
  <ColorfulParadise />
  <Footer />
</Layout>
